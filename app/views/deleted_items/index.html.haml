%h2.title
  Deleted Items

- @items.each do |item|
  %dl.item
    %dt.category{ :class => item.class.to_s.underscore.downcase }= item.class.to_s
    %dd
      %span.item_name
        %label= item.name
        %small= t('removed_ago', :time => l(item.deleted_at, :format => :short))
        %span.actions
          - form_tag deleted_item_path(item), :method => :put do
            = submit_tag t('restore'), :id => "restore_#{item.name.to_dom_id}"
          %b.divider= '|'
          - form_tag deleted_item_path(item), :method => :delete do
            = submit_tag t('permanently_delete'), :id => "delete_#{item.name.to_dom_id}", :class => 'delete-forever'
